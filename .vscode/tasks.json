{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-Iinclude",            // Include header files
                "src/*.cpp",           // Compile all .cpp files in the src folder
                "-o", "Build.exe" // Output file
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
